{
  "info": {
    "_postman_id": "paciente-collection-001",
    "name": "MedConnect - Jornada Paciente",
    "description": "Coleção completa da jornada de um paciente no sistema MedConnect",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Login Paciente",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "  const response = pm.response.json();",
              "  pm.environment.set('paciente_token', response.token);",
              "  pm.environment.set('paciente_usuario', response.usuario);",
              "  pm.environment.set('paciente_role', response.role);",
              "  console.log('✅ Token obtido com sucesso!');",
              "  console.log('Role: ' + response.role);",
              "} else {",
              "  console.log('❌ Erro no login');",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"usuario\": \"paciente\",\n  \"senha\": \"paciente\"\n}"
        },
        "url": {
          "raw": "http://localhost:8080/auth/login",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "8080",
          "path": [
            "auth",
            "login"
          ]
        }
      },
      "response": []
    },
    {
      "name": "2. Ver Minhas Consultas Agendadas",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "  const response = pm.response.json();",
              "  console.log('✅ Consultas recuperadas: ' + response.Count);",
              "  if (response.value && response.value.length > 0) {",
              "    pm.environment.set('consulta_id', response.value[0].id);",
              "    console.log('Primeira consulta ID: ' + response.value[0].id);",
              "  }",
              "} else if (pm.response.code === 403) {",
              "  console.log('❌ Acesso Negado - Token inválido ou expirado');",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{paciente_token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "http://localhost:8081/consultas",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "8081",
          "path": [
            "consultas"
          ]
        }
      },
      "response": []
    },
    {
      "name": "3. Ver Detalhes de Uma Consulta",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "  const response = pm.response.json();",
              "  console.log('✅ Consulta encontrada!');",
              "  console.log('ID: ' + response.id);",
              "  console.log('Status: ' + response.status);",
              "  console.log('Data/Hora: ' + response.dataHora);",
              "} else if (pm.response.code === 404) {",
              "  console.log('❌ Consulta não encontrada');",
              "} else if (pm.response.code === 403) {",
              "  console.log('❌ Acesso Negado - Paciente não pode ver esta consulta');",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{paciente_token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "http://localhost:8081/consultas/1",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "8081",
          "path": [
            "consultas",
            "1"
          ]
        }
      },
      "response": []
    },
    {
      "name": "4. ❌ Tentar Criar Consulta (Deve Falhar)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 403) {",
              "  console.log('✅ Bloqueado corretamente com 403 Forbidden');",
              "  console.log('Pacientes não têm permissão para criar consultas');",
              "} else if (pm.response.code === 201) {",
              "  console.log('❌ ERRO: Paciente conseguiu criar consulta (não deveria!)');",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{paciente_token}}",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"idPaciente\": 1,\n  \"idMedico\": 2,\n  \"dataHora\": \"2026-02-15T10:00:00Z\",\n  \"observacoes\": \"Consulta tentativa\"\n}"
        },
        "url": {
          "raw": "http://localhost:8081/consultas",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "8081",
          "path": [
            "consultas"
          ]
        }
      },
      "response": []
    },
    {
      "name": "5. ❌ Tentar Deletar Consulta (Deve Falhar)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 403) {",
              "  console.log('✅ Bloqueado corretamente com 403 Forbidden');",
              "  console.log('Pacientes não têm permissão para deletar consultas');",
              "} else if (pm.response.code === 204) {",
              "  console.log('❌ ERRO: Paciente conseguiu deletar consulta (não deveria!)');",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{paciente_token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "http://localhost:8081/consultas/1",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "8081",
          "path": [
            "consultas",
            "1"
          ]
        }
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "paciente_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "paciente_usuario",
      "value": "paciente",
      "type": "string"
    },
    {
      "key": "paciente_role",
      "value": "PACIENTE",
      "type": "string"
    },
    {
      "key": "consulta_id",
      "value": "1",
      "type": "string"
    }
  ]
}
