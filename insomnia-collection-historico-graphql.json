{
  "info": {
    "name": "MedConnect GraphQL Tests",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1 - Login Admin",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "    pm.collectionVariables.set('token', pm.response.json().token);",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\"usuario\": \"admin\", \"senha\": \"admin\"}"
        },
        "url": "http://localhost:8080/auth/login"
      }
    },
    {
      "name": "GraphQL Agendamento",
      "item": [
        {
          "name": "Historico Resumo",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"query\": \"query { historicoConsultaResumo(idConsulta: 1) { id idConsulta statusNovo dataAlteracao } }\"}"
            },
            "url": "http://localhost:8081/graphql"
          }
        },
        {
          "name": "Historico Completo",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"query\": \"query { historicoConsulta(idConsulta: 1) { id idConsulta idPaciente idMedico statusAnterior statusNovo tipoAcao descricao dataAlteracao } }\"}"
            },
            "url": "http://localhost:8081/graphql"
          }
        },
        {
          "name": "Historico Detalhado",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"query\": \"query { historicoConsultaDetalhado(idConsulta: 1) { id idConsulta idPaciente idMedico statusAnterior statusNovo tipoAcao idUsuarioResponsavel tipoUsuarioResponsavel descricao dataAlteracao } }\"}"
            },
            "url": "http://localhost:8081/graphql"
          }
        },
        {
          "name": "Historico por Per√≠odo",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"query\": \"query { historicoConsultaPorPeriodo(idConsulta: 1, dataInicio: \\\"2024-01-01\\\", dataFim: \\\"2026-12-31\\\") { id idConsulta statusAnterior statusNovo dataAlteracao } }\"}"
            },
            "url": "http://localhost:8081/graphql"
          }
        },
        {
          "name": "Registrar Historico",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"query\": \"mutation { registrarHistorico(idConsulta: 1, idPaciente: 1, idMedico: 1, statusAnterior: \\\"PENDENTE\\\", statusNovo: \\\"CONFIRMADA\\\", tipoAcao: \\\"CONFIRMACAO\\\", idUsuarioResponsavel: 1, tipoUsuarioResponsavel: \\\"MEDICO\\\", descricao: \\\"Consulta confirmada\\\") { id idConsulta statusAnterior statusNovo dataAlteracao } }\"}"
            },
            "url": "http://localhost:8081/graphql"
          }
        }
      ]
    }
  ]
}
